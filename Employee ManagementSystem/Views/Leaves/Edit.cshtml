@model Employee_ManagementSystem.Models.Leave

@{
    ViewData["Title"] = "Edit";
}

<div class="row pt-4 pb-4">
<div class="col-6" style="text-align:left;">
    <h1>Edit Leave Schedule</h1>
</div>

<div class="col-6">
    <a class="btn btn-warning" asp-action="Index"><i class="fa-solid fa-person-walking-arrow-loop-left"></i>&nbsp; Back to List</a>
</div>
</div>
<br />


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LeaveStatus" class="control-label"></label>
                <input asp-for="LeaveStatus" class="form-control" />
                <span asp-validation-for="LeaveStatus" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

